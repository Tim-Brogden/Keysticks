<UserControl x:Class="Keysticks.UserControls.ControlAnnotationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Keysticks.UserControls" 
             Loaded="UserControl_Loaded" MinWidth="35" Height="20"
             mc:Ignorable="d">
    <!--    <Grid Name="OuterPanel" Background="Transparent" Width="35" Height="20"> -->
    <Border Name="CustomWindowBorder" Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" MouseLeftButtonUp="CustomWindowBorder_MouseLeftButtonUp" MouseRightButtonUp="CustomWindowBorder_MouseRightButtonUp">
        <Grid>
            <Viewbox Name="CaptionViewBox">
                <TextBlock Name="CaptionTextBlock" Background="Transparent" Margin="2,0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </Viewbox>
            <Image Name="CaptionImage" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None"></Image>
        </Grid>
    </Border>
    <!--    </Grid> -->
</UserControl>
